{
  "compilerOptions": {
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "noUncheckedIndexedAccess": true,
    "outDir": "build",
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2015"
  },
  "include": ["src/**/*", "scripts/**/*"]
}
